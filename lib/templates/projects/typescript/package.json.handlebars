    "dts-bundle": "^0.7.3",
    "dts-bundle-webpack": "^1.0.2",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "npm-check-updates": "^16.6.2",
    "onchange": "^7.1.0",
    "prettier": "2.8.1",
    "typedoc": "^0.23.23",
