import { {{toService name}} } from "../types/interfaces";
import { exportAsNopeService, getNopeLogger } from "nope-js-node";

const logger = getNopeLogger("{{name}}-service")

export async function _{{toService name}} (greetings: string) {
    // Please overwrite me.
    logger.debug("calling service '{{name}}' with the following parameters:", greetings)
